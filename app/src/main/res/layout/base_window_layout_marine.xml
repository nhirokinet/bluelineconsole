<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseWindowMainLayoutRoot"
    android:animateLayoutChanges="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".applicationMain.BaseWindowActivity"
    >
    <LinearLayout
        android:id="@+id/baseWindowRootLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:animateLayoutChanges="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >
        <!-- Linter complaints that this LinearLayout or parent LinearLayout is useless, but I think both are needed. -->
        <LinearLayout
            android:id="@+id/baseWindowIntermediateWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/marine_main_window"
            tools:ignore="UselessParent"
            >
            <LinearLayout
                android:id="@+id/baseWindowHeaderWrapper"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:clickable="false"
                    android:id="@+id/baseWindowMainHeaderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3sp"
                    android:gravity="center_horizontal|top"
                    android:textColor="?bluelineconsoleFrameTextColor"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="12sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/baseWindowMainLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="18sp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:animateLayoutChanges="true"
                >
                <ViewStub
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/baseWindowMainViewStub"
                    android:animateLayoutChanges="true"
                    />
            </LinearLayout>
            <!--
              To fill the gap between baseWindowFooterWrapper and View just above,
              layout_marginTop is actually set to -(18sp + 1 physical pixel).
              BaseWindowActivity.onCreate() decrease 1 physical pixel from layout_marginTop.
            -->
            <LinearLayout
                android:id="@+id/baseWindowFooterWrapper"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_marginTop="-18sp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:clickable="false"
                    android:id="@+id/baseWindowMainFooterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4sp"
                    android:gravity="center_horizontal|bottom"
                    android:textStyle="bold"
                    android:textColor="?bluelineconsoleFrameTextColor"
                    android:layout_gravity="end"
                    android:text=""
                    android:textSize="12sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
