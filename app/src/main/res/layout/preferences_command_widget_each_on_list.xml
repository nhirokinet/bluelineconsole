<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:duplicateParentState="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/widgetCommandNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3sp"
            android:clickable="false"
            android:focusable="false"
            android:textColor="?bluelineconsoleBaseTextColor"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/widgetCommandAbbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3sp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/preferences_command_widget_command_abbreviable_label"
            android:textStyle="italic"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/widgetCommandWidgetNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:clickable="false"
        android:focusable="false"
        />
</LinearLayout>
