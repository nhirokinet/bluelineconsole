<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_up_main_wrapper_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingVertical="0px"
    android:paddingHorizontal="0px"
    android:animateLayoutChanges="true"
    android:background="@color/colorFrame"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baseBackground"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="6sp"
            android:gravity="start"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:text="@string/notification_title_on_startup"
                android:textColor="@color/baseText"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6sp"
                android:layout_gravity="start"
                android:text="@string/notification_detail_on_startup_pre"
                android:textColor="@color/baseText"
                />
            <TextView
                android:id="@+id/startUpHelpingCommandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:padding="3sp"
                android:layout_gravity="start"
                android:background="@color/colorBackgroundOfCommand"
                android:textColor="@color/baseText"
                android:typeface="monospace"
                android:text="@string/notification_detail_on_startup_main"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6sp"
                android:layout_gravity="start"
                android:textColor="@color/baseText"
                android:text="@string/notification_detail_on_startup_post"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startUpCheckBoxNotToContinue"
                android:text="@string/notification_window_never_later" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startUpOKButton"
                android:textAllCaps="false"
                android:text="@string/notification_window_close" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>