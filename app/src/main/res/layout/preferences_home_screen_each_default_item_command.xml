<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="?android:colorBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferences_home_screen_command_label"
            android:labelFor="@id/home_screen_command_edit_command"
            />
        <EditText
            android:id="@+id/home_screen_command_edit_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            />
        <Button
            android:id="@+id/home_screen_command_each_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_update"
            android:drawableStart="@android:drawable/ic_menu_save"
            />
        <Button
            android:id="@+id/home_screen_command_each_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete"
            android:drawableStart="@android:drawable/ic_menu_delete"
            />
    </LinearLayout>
</ScrollView>